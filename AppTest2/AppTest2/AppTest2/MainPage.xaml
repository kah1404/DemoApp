<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AppTest2"
             x:Class="AppTest2.MainPage">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical">
            <Label 
                    Text="Welcome to Xamarin.Forms!"
                    VerticalOptions="End" 
                    HorizontalOptions="Center" />
           <Entry
                    x:Name="Entry"
                    Placeholder="Text" 
                    VerticalOptions="End" />
            
            <Button 
                    Text="Knapp" 
                    VerticalOptions="End" 
                    HorizontalOptions="Center" />            
            
            <Label 
                    x:Name="ByttMeg"
                    
                    Text="Welcome to Xamarin.Forms!"
                    VerticalOptions="End" 
                    HorizontalOptions="Center" />
            
            <Button 
                    x:Name="Butters"
                    Clicked="Butters_OnClicked"
                    Text="Knapp" 
                    VerticalOptions="End" 
                    HorizontalOptions="Center" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>